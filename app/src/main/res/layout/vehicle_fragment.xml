<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:contentPadding="8dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_vehicle"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@mipmap/ic_motorcycle_black_48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Car name "
            style="?android:attr/textAppearanceMedium"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:paddingTop="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_vehicle"
            android:layout_toEndOf="@+id/img_vehicle"
            android:text="Some info about the car ...\nTesting text view text, text text."/>
    </RelativeLayout>
</android.support.v7.widget.CardView>