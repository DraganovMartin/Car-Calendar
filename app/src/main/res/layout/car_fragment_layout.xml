<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/car_add_image"
        android:id="@+id/carImage"
        android:layout_marginTop="23dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plateLayout"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/carImage"
        android:layout_centerHorizontal="true">

        <TextView
            android:text="@string/registration_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regNum"


            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
             />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/regNumPlate"
             />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/plateLayout"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </ScrollView>


</RelativeLayout>